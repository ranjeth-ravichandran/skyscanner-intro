<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/bpkCardView3"
        android:layout_width="398dp"
        android:layout_height="69dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="small"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toTopOf="@+id/bpkCardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpkCardView">

        <net.skyscanner.backpack.text.BpkText
            style="@style/bpkTextHeading3"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LHR" />

        <net.skyscanner.backpack.text.BpkText
            style="@style/bpkTextHeading3"

            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:text="12:20AM"
            android:textAlignment="textEnd" />

    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/bpkCardView2"
        android:layout_width="398dp"
        android:layout_height="69dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="404dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="small"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bpkCardView3">

        <net.skyscanner.backpack.text.BpkText
            style="@style/bpkTextHeading3"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LHR" />

        <net.skyscanner.backpack.text.BpkText
            style="@style/bpkTextHeading3"

            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:text="12:20AM"
            android:textAlignment="textEnd" />

    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:id="@+id/bpkCardView"
        android:layout_width="398dp"
        android:layout_height="69dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="small"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toTopOf="@+id/bpkCardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <net.skyscanner.backpack.text.BpkText
            style="@style/bpkTextHeading3"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Flight Information Number"
            android:textAlignment="center" />

    </net.skyscanner.backpack.card.BpkCardView>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="393dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:inputType="text"
        android:text="Arrival"
        app:layout_constraintBottom_toTopOf="@+id/bpkCardView2"
        app:layout_constraintTop_toBottomOf="@+id/bpkCardView3"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="394dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="Departure"
        app:layout_constraintBottom_toTopOf="@+id/bpkCardView3"
        app:layout_constraintTop_toBottomOf="@+id/bpkCardView"
        tools:layout_editor_absoluteX="9dp" />

</androidx.constraintlayout.widget.ConstraintLayout>